
@model IEnumerable<GBook.Models.Messages>

@{
    ViewBag.Title = "Index";
    //Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Messages</h2>
<p>
    @if (Context.Session.GetString("Name") != null)
    {
      <a asp-action="Create">Send Message</a>  
    }    
</p>

<div>
        <table style="width:50%" class="table">
            <tr>

            </tr>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.MessageDateTime)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.User)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Message)
                </th>

            </tr>
        @foreach (var item in Model.AsEnumerable().Reverse()) 
            {
            <tr>
                <td><p>@Html.DisplayFor(modelItem => item.MessageDateTime)</p></td>
                <td><p>@Html.DisplayFor(modelItem => item.User.Login)</p></td>
                <td><p>@Html.DisplayFor(modelItem => item.Message)</p></td>
            </tr>
            }
        </table>

    </div>

